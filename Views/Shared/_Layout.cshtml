@using Kodlarim.Controllers
@using Kodlarim.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UsualCode.com</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/user")
    @Scripts.Render("~/bundles/modernizr")

    <!--GOOGLE ADSENSE CODE -->
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({
            google_ad_client: "ca-pub-6880014806446889",
            enable_page_level_ads: true
        });
    </script>
    <!--GOOGLE ADSENSE CODE -->
</head>
<body>
    <div class="navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Post")">
                    <b>
                        <span style="color: #2196F3">&lt;</span>
                        <span style="color: #333">UsualCode.com</span>
                        <span style="color: #2196F3">/&gt;</span>
                    </b>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home page", "Index", "Post")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Admin panel", "Index", "Post", new { Area = "Panel" }, null)</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="row">
            <div class="content col-md-9">
                @RenderBody()
            </div>
            <div class="col-md-3 right-col">
                <div class="row">
                    <div class="col-md-12">
                        <div class="media panel-about-me" style="margin-top: 30px">
                            <a href="@Url.Action("About", "Home")">
                                <div class="media-left media-middle">
                                    <img class="media-object img-circle img-about-me" src="~/Content/LocalResources/ilkin_64x64.jpg" />
                                </div>
                                <div class="media-body">
                                    <b>İlkin Elimov</b>
                                    <br />
                                    <span>Software Developer</span>
                                </div>
                            </a>
                        </div>
                    </div> @*col*@
                </div> @*row*@
                <br />
                <div class="row">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Search", "Post", FormMethod.Get))
                        {
                            <div class="input-group">
                                <input type="text" class="form-control" name="keyword" placeholder="Search entire blog...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit">Search</button>
                                </span>
                            </div><!-- /input-group -->
                        }
                    </div>
                </div>

                <div class="adblock-message">
                    <div class="message-text">
                        <div class="row">
                            <div class="col-md-12">
                                Please disable AdBlock on this site. My ads will not disturb you.
                            </div>
                        </div>
                    </div>
                </div>
                <br /><br /><br />
                <ul class="nav nav-tabs nav-justified">
                    <li role="presentation" class="active"><a href="#" data-toggle="tooltip" data-placement="top" title="Last commented">Agenda</a></li>
                    <li role="presentation"><a href="#" data-toggle="tooltip" data-placement="top" title="Most commented"><i class="fa fa-star-o"></i> Favourites</a></li>
                </ul>

                @{
                    Html.RenderAction("_LastCommented", "Post");
                }

            </div>
        </div>
        <hr class="footer-hr" />
        <footer>
            <p>&copy; @DateTime.Now.Year - Develoser.com developer's blog</p>
        </footer>
    </div>

    <!--adblock detecter-->
    <script src="/Content/public/advertisement.js"></script>
    <!--adblock detecter-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/ajax")
    @Scripts.Render("~/bundles/site")
    @RenderSection("scripts", required: false)

    <!--GOOGLE ANALYTICS-->
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-64451803-3', 'auto');
        ga('send', 'pageview');

    </script>
    <!--GOOGLE ANALYTICS-->



</body>
</html>
