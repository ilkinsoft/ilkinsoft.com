                                @Html.DropDownList("UserName", (IEnumerable<SelectListItem>)ViewBag.Users, "İstifadəçini seçin..", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
